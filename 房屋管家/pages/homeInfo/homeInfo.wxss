.topSwiper {
    background-color: #ccc;
    width: 100%;
    height: 250px;
    margin-bottom: 20px;
}

.slide-image {
    width: 100%;
    height: 100%;
}

/*中间部分*/
.baseView{
    display: flex;
    flex-direction: column;
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 50px;
    /*position: relative;
    top: 10px;
    bottom: 50px;*/
}

.priceV{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tipLabel{
    font-size: 14px;
    margin-top: 10px;
    margin-bottom: 5px;
}

.detailL{
    font-size: 16px;
    margin-top: 10px;
    margin-left: 10px;
}

/*底部*/
.contactV{
    background-color:white;
    height: 45px;
    font-size: 14px;
    
    display: flex;
    flex-direction: row;
    align-items: center;

    position: fixed;
    bottom: 0;
    width: 100%;
}

.contactV label{
    margin-left: 10px;
}

.contactV::before{
    content: '';
    display: block;
    height: 1px;
    background-color: black;
    width: 30%;

    position: absolute;
    top: 0;
}
