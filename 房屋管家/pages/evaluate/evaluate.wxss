.baseV{
    height: 100%;
    background-color: #fff;
    padding-left: 20px;
    padding-right: 20px;
    margin-top: 5px;
}
.topV{
    padding-top: 20px;
}
.starImg{
    width: 16px;
    height: 16px;
}

.middleV{
    margin-top: 50px;
}
.evaluate_starV{
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 40px;
}
.starV{
    margin-left: 30px;
    line-height: 40px;
}
.starV image{
    margin-right: 15px;
}

/*提交按钮*/
.submit_evaBtn{
    width: 70%;
    font-size: 15px;
    color: #333;
    height: 35px;
    line-height: 35px;
    background-color: #fff;
    margin-top: 15%;
    border: #ccc solid 1px;
    border-radius: 15px;
}
.submit_evaBtn::after{
    border: none;
}